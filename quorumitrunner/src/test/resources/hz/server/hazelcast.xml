<?xml version="1.0" encoding="UTF-8"?>
<hazelcast
        xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config-3.10.xsd"
        xmlns="http://www.hazelcast.com/schema/config"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <group>
        <name>hz-quorum</name>
        <password>s3crEt</password>
    </group>

    <properties>
        <property name="hazelcast.icmp.enabled">true</property>
        <property name="hazelcast.icmp.timeout">100</property>
        <property name="hazelcast.icmp.interval">1000</property>
        <property name="hazelcast.icmp.ttl">255</property>
        <property name="hazelcast.icmp.max.attempts">2</property>
        <property name="hazelcast.icmp.echo.fail.fast.on.startup">true</property>
        <property name="hazelcast.merge.next.run.delay.seconds">10</property>
        <property name="hazelcast.merge.first.run.delay.seconds">20</property>
        <!-- default is 5000 ms -->
        <property name="hazelcast.operation.backup.timeout.millis">1000</property>
    </properties>

    <quorum name="q3" enabled="true">
        <quorum-size>3</quorum-size>
    </quorum>

    <list name="default">
        <quorum-ref>q3</quorum-ref>
        <backup-count>2</backup-count>
    </list>

    <set name="default">
        <quorum-ref>q3</quorum-ref>
        <backup-count>2</backup-count>
    </set>

    <semaphore name="default">
        <quorum-ref>q3</quorum-ref>
        <backup-count>2</backup-count>
    </semaphore>

    <atomic-long name="default">
        <quorum-ref>q3</quorum-ref>
    </atomic-long>

    <atomic-reference name="default">
        <quorum-ref>q3</quorum-ref>
    </atomic-reference>

    <cardinality-estimator name="default">
        <quorum-ref>q3</quorum-ref>
        <backup-count>2</backup-count>
    </cardinality-estimator>

    <ringbuffer name="default">
        <quorum-ref>q3</quorum-ref>
        <backup-count>2</backup-count>
    </ringbuffer>

    <replicatedmap name="default">
        <quorum-ref>q3</quorum-ref>
    </replicatedmap>

    <count-down-latch name="default">
        <quorum-ref>q3</quorum-ref>
    </count-down-latch>

    <multimap name="default">
        <quorum-ref>q3</quorum-ref>
        <backup-count>2</backup-count>
    </multimap>
</hazelcast>